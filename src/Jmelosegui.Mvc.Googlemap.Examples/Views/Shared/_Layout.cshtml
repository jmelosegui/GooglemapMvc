<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.PageTitle</title>
    <script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>
    @Html.Partial("_GoogleAnalytics")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="MainMenu">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="~/">Home</a></li>
                    <li><a href="https://github.com/jmelosegui/GooglemapMvc"><i class="fa fa-github-square"></i> Project on GitHub</a></li>
                    <li><a href="https://github.com/jmelosegui/GooglemapMvc/issues"><i class="fa fa-heart"></i> Report a bug</a></li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div id="title" class="col-xs-12 col-sm-8"><h2>Googlemap control for Asp.Net MVC</h2></div>
            <div class="col-xs-12 col-sm-4">
                <ul class="social-button">
                    <li><iframe src="https://ghbtns.com/github-btn.html?user=jmelosegui&repo=googlemapmvc&type=star&count=true&size=small" frameborder="0" scrolling="0" width="80px" height="20px"></iframe></li>
                    <li> @Html.Partial("_TwitterButton")</li>
                    <li>
                        <g:plusone size="medium"></g:plusone>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <hr />
            </div>
        </div>
        <div class="row row-offcanvas row-offcanvas-left">
            <div class="col-sm-4 col-md-3 sidebar-offcanvas" id="sidebar" role="navigation">
                <p class="visible-xs">
                    <button type="button" class="btn btn-xs" data-toggle="offcanvas"><i class="glyphicon glyphicon-chevron-left"></i></button>
                </p>
                <div class="sidebar-nav">
                    @Html.Partial("_Navigation")
                </div>
            </div>
            <div class="col-xs-1 visible-xs">
                <button type="button" class="btn btn-xs" data-toggle="offcanvas" id="btnShow"><i class="glyphicon glyphicon-chevron-right"></i></button>
            </div>
            <div class="col-xs-11 col-sm-8 col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
    <hr />
    <div class="container">

        <div class="row">
            <div class="col-sm-12">
                <footer>
                    <p>&copy; @DateTime.Now.Year - jmelosegui</p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-toggle=offcanvas]').click(function () {
                $('.row-offcanvas').toggleClass('active');
                $('#btnShow').toggle();
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
