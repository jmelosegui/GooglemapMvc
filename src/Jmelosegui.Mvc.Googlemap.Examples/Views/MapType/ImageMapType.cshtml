@using Jmelosegui.Mvc.GoogleMap
@{
    ViewBag.Title = "Image Map Type";
    Layout = "~/Views/Shared/_LayoutExamples.cshtml";
}

@(Html.GoogleMap()
        .Name("map")
        .ApiKey((string)ViewData["GoogleMapApiKey"])
        .Zoom(1)
        .Height(520)
        .Center(c => c.Latitude(0)
                      .Longitude(0))
        .ZoomControlStyle(ZoomControlStyle.Large)
        .StreetViewControlVisible(false)
        
        .ImageMapTypes(map =>
        {
            map.Add()
                .TileUrlPattern("http://inmediati.blob.core.windows.net/map/speculative/{2}/tile_{2}_{0}-{1}.png")
                .TileSize(new Size(256, 256))
                .RepeatHorizontally(false)
                .RepeatVertically(false)
                .MaxZoom(4)
                .MinZoom(1)
                .MapTypeName("Labels")
                .MapTypeAltName("Game of Thrones Labeled");


            map.Add()
                .TileUrlPattern("http://inmediati.blob.core.windows.net/map/natural/{2}/tile_{2}_{0}-{1}.png")
                .TileSize(new Size(256, 256))
                .RepeatHorizontally(false)
                .RepeatVertically(false)
                .MaxZoom(4)
                .MinZoom(1)
                .MapTypeName("No Labels")
                .MapTypeAltName("Game of Thrones Natural Map");

        })
        .MapTypeId("Labels")

)